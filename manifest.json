{
    "manifest_version": 2,
    "name": "Whotrades",
    "version": "1.0",
    "description": "Hubble pictures extension",
    "author": "Salavat Dautov",


    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_title": "Whotrades",
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["http://*/*","https://*/*"],
        "js": [
            "/js/angular.min.js",
            "/js/jquery-2.1.4.min.js",
            "/js/whotrades.js"
        ]
    }],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "options_page": "options.html"
}